{
  "hosting": {
    "public": "./packages/client/dist",
    "predeploy": [
      "yarn workspace @sockbase/client build"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "./packages/functions",
    "predeploy": [
      "yarn workspace @sockbase/functions run lint",
      "yarn workspace @sockbase/functions run build"
    ],
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "firestore": {
    "rules": "./packages/rules/firestore.rules"
  },
  "storage": {
    "rules": "./packages/rules/storage.rules"
  }
}